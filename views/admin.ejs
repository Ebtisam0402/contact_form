<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Guest Form</title>
        <!-- Link to JavaScript -->
    <script src="/js/guestform.js"defer></script>
        <script src="//code.jquery.com/jquery-3.7.1.js"></script>
    <script src="//cdn.datatables.net/2.3.4/js/dataTables.min.js"></script>

    <script defer>
        let table = new DataTable('#order-table');
    </script>
    
    <!-- Favicon -->
    <link rel="icon" href="images/form_icon.png">
    
    <!-- Stylesheet -->
    <link rel="stylesheet" href="styles/form-style.css"> 
</head>
<body>
    <%- include('partials/navbar') %>
    <main>
    <h1>Admin Page</h1>
    <table id="order-table" class="display">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Job Title</th>
                    <th>Company</th>
                    <th>LinkedIn</th>
                    <th>Meet</th>
                    <th>Message</th>
                    <th>Date/Time</th>
                </tr>
            </thead>
            <tbody>
               <% if (orders.length > 0) { %>
      <% for (let i = 0; i < orders.length; i++) { 
        let order = orders[i]; %>

                <tr>
                    <td><%= order.fname %> <%= order.lname %></td>
                    <td><%= order.jtitle %></td>
                    <td><%= order.company %></td>
                    <td><%= order.linkedin %></td>
                    <td><%= order.meet %></td>
                    <td><%= order.message %></td>
                    <td><%= order.timestamp %></td>
                </tr>

                <% }; %>
                 <% } else { %>
      <tr>
        <td colspan="1">No contacts to display.</td>
      </tr>
    <% } %>

            </tbody>
        </table>
   
    </main>
</body>
</html>